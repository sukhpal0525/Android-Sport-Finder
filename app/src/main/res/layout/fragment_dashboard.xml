<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Dashboard Title -->
    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Total Games Joined -->
    <TextView
        android:id="@+id/totalGamesJoined"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Total Games Joined: 5"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/dashboardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/grey_border"/>

    <!-- Your Next Game -->
    <TextView
        android:id="@+id/nextGame"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Your Next Game: Tomorrow"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/totalGamesJoined"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/grey_border"/>

    <!-- Recently Joined -->
    <TextView
        android:id="@+id/recentlyJoined"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Recently Joined: Game XYZ"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/nextGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/grey_border"/>

    <!-- More Dashboard Items... -->

</androidx.constraintlayout.widget.ConstraintLayout>
