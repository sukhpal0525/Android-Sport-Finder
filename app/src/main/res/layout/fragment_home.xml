<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <!--                                       WELCOME                                       -->

        <!-- Title -->
        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to SportsFinder"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />

        <!-- Body -->
        <TextView
            android:id="@+id/welcomeMessageBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="A local sports event finding application designed to help you find your available events for your favourite sports with an emphasis on usability and user-centered design."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />


        <!--                                   QUICK NAVIGATION                                  -->

        <Button
            android:id="@+id/findMatchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find a Match"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Search" />


        <!--                                        YOUR UPCOMING MATCHES                                        -->

        <TextView
            android:id="@+id/upcomingMatchesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Matches:"
            android:textSize="20sp"
            android:layout_marginTop="16dp" />

        <!-- Sample Match (can be replaced by a RecyclerView in the future) -->
        <TextView
            android:id="@+id/sampleMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match 1: FootballCity Park"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!--                                        NOTIFICATIONS                                        -->

<!--        <TextView-->
<!--            android:id="@+id/notificationsTitle"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Notifications:"-->
<!--            android:textSize="20sp"-->
<!--            android:layout_marginTop="16dp" />-->

<!--        <TextView-->
<!--            android:id="@+id/sampleNotification"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Update: New feature added!"-->
<!--            android:textSize="16sp"-->
<!--            android:layout_marginTop="8dp" />-->
    </LinearLayout>
</ScrollView>
